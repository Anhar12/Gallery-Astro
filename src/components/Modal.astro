---
const { name, title } = Astro.props;
---

<div id={name + '-modal'} class="top-1/2 left-1/2 transform -translate-y-1/2 -translate-x-1/2 fixed w-full h-screen items-center justify-center hidden z-40">
  <div id={name + '-modal-body'} class="bg-white shadow-lg md:w-[35%] w-[90%] relative z-100 transition-all duration-300">
    <div>
      <div class="flex justify-between items-center pb-2 bg-sky-700 p-4 pt-2">
        <h2 id={name + '-modal-title'} class="text-xl font-semibold text-white">{title}</h2>
  
        <button id={name + '-modal-close'} class="text-sky-300 transition duration-300 hover:text-white text-right cursor-pointer text-2xl">
          &times;
        </button>
      </div>
  
      <slot />
    </div>
    <div class="w-full h-full border border-white absolute transform -translate-y-1/2 -translate-x-1/2 left-[calc(50%+2px)] top-[calc(50%+2px)] -z-10"></div>
  </div>
  <div id={name + '-overlay'} class="w-full h-full bg-black/50 absolute top-0 left-0"></div>
</div>